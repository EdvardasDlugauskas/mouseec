<MainScreen>:
    name: "main_screen"

    MDBottomNavigation:
        id: bottom_navigation

        MDBottomNavigationItem:
            name: "all_songs"
            text: "All"
            icon: "home"#"file-music"#"music-box"#"library-music"

            MDSpinner:
                id: spinner
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                active: True

            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: 60
                    spacing: 5

                    MDIconButton:
                        icon: "filter-outline"
                        on_release: MDDropdownMenu(items=name_scroll.filter_menu_items, width_mult=2).open(self)


                    MDTextField:
                        id: search_field
                        hint_text: "Quick Search"
                        on_text:
                            name_scroll.run_search_countdown(self.text)
                        size_hint_y: None
                        height: self.parent.height * 0.8

                    MDIconButton:
                        icon: "dots-vertical"
                        on_release:
                            MDDropdownMenu(items=name_scroll.options_menu_items, width_mult=2).open(self)

                #ScrollView:
                AudioListScroller:
                    id: name_scroll


        #MDBottomNavigationItem:
        #    name: "new_playlist"
        #    text: "New Playlists"
        #    icon: "library-music"



<AudioListScroller>:
    do_scroll_x: False
    MDList:
        id: entry_list
        cols: 1
        size_hint_y: None
        height: self.minimum_height

<AudioEntry>:
    LeftAvatar:
        id: avatar
        source: "./rainbow_checkerboard.jpg"